<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    //divicion de principal(toda la area)
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >
        //divicion del apartado de operaciones(el cuadro completo  de arriba xd)
        <LinearLayout
            android:background="@color/gris"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            >

            //donde hare todo el texto y cosas feas :'v

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/naranja"
                    android:text="Resultado"
                    android:layout_gravity="right|bottom"
                    android:textSize="50dp"
                    android:onClick="PressButton"
                    android:id="@+id/resultadofinal"
                    >
                </TextView>
            </FrameLayout>

        </LinearLayout>
        //divicion de la seccion de teclas
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@color/white"
            >
            //divicion de las botones
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:textColor="@color/naranja"

                >

                <Button
                    android:id="@+id/btnlimpiar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/blanco_grisaceo"
                    android:onClick="PressButton"
                    android:text="C"
                    android:textColor="@color/naranja">b</Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="%"
                    android:onClick="PressButton"
                    android:textColor="@color/naranja"
                    android:id="@+id/porcentaje"
                    >
                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="DEL"
                    android:onClick="PressButton"
                    android:textColor="@color/naranja"
                    android:id="@+id/eliminar"
                    >
                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="/"
                    android:onClick="PressButton"
                    android:id="@+id/dividir"
                    android:textColor="@color/naranja"
                    >
                </Button>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="7"
                    android:onClick="PressButton"
                    android:id="@+id/siete"
                    >
                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="8"
                    android:onClick="PressButton"
                    android:id="@+id/ocho"
                    >
                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="9"
                    android:onClick="PressButton"
                    android:id="@+id/nueve"
                    >
                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="@color/naranja"
                    android:text="X"
                    android:id="@+id/multiplicar"
                    >
                </Button>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="4"
                    android:onClick="PressButton"
                    android:id="@+id/cuatro"
                    >
                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="5"
                    android:onClick="PressButton"
                    android:id="@+id/cinco"
                    >
                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="6"
                    android:onClick="PressButton"
                    android:id="@+id/seis"
                    >
                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="-"
                    android:onClick="PressButton"
                    android:textColor="@color/naranja"
                    android:id="@+id/menos"
                    >
                </Button>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="1"
                    android:onClick="PressButton"
                    android:id="@+id/uno"
                    >
                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="2"
                    android:onClick="PressButton"
                    android:id="@+id/dos"
                    >
                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="3"
                    android:onClick="PressButton"
                    android:id="@+id/tres"
                    >
                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="@color/naranja"
                    android:text="+"
                    android:onClick="PressButton"
                    android:id="@+id/mas"
                    >
                </Button>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="0"
                    android:onClick="PressButton"
                    android:id="@+id/cero"
                    >
                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="."
                    android:onClick="PressButton"
                    android:id="@+id/punto"
                    >
                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="="
                    android:onClick="PressButton"
                    android:background="@color/naranja"
                    android:textColor="@color/blanco"
                    android:id="@+id/resultado"
                    >
                </Button>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>